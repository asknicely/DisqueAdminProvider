{% extends '@disque_admin/layout.html.twig' %}
{% block content %}
    <h2>Node: <code>{{ id }}</code></h2>

    <div class="row">
        <div class="card-columns">
            {% for section, stats in info %}
                <article class="card">
                    <div class="card-block">
                        <h4 class="card-title">{{ section }}</h4>

                        <table class="table table-sm">
                            {% for name, value in stats %}
                                <tr>
                                    <th scope="row">{{ name }}</th>
                                    <td>{{ value | join(', ') }}</td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </article>
            {% endfor %}
        </div>
    </div>
{% endblock %}
