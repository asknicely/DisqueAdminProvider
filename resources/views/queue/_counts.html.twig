{% if not queues %}
    <p>
        There are currently no queues with jobs. Refresh the page in a bit.
    </p>
{% else %}
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Jobs</th>
        </tr>
        </thead>
        <tbody>
        {% for queue, count in queues %}
            <tr>
                <th scope="row">
                    {% if queue is empty %}
                        Empty Queue Name
                    {% else %}
                        <a href="{{ path('disque_admin_queue_show', { 'name': queue, 'prefix': prefix }) }}">
                            {{ queue }}
                        </a>
                    {% endif %}
                </th>
                <td>{{ count }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}
